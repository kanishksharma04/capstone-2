generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  customer
  seller
  admin
}

model User {
  id        String   @id @default(dbgenerated("gen_random_uuid()"))
  email     String   @unique
  password  String
  name      String
  role      Role     @default(customer)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  items     Item[]
}

model Item {
  id        String   @id @default(dbgenerated("gen_random_uuid()"))
  name      String
  brand     String
  category  String
  price     Float
  discount  Int      @default(0)
  description String
  images    String[]
  tags      String[]
  stock     Int      @default(0)
  sellerId  String?
  seller    User?    @relation(fields: [sellerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
